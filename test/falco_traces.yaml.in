    detect: True
    detect_level: ERROR
    detect_counts:
      - "Write below binary dir": 4

  write-etc:
    trace_file: traces-positive/write-etc.scap
    detect: True
    detect_level: ERROR
    detect_counts:
      - "Write below etc": 1

  write-rpm-database:
    trace_file: traces-positive/write-rpm-database.scap
    detect: True
    detect_level: ERROR
    detect_counts:
      - "Write below rpm database": 1
