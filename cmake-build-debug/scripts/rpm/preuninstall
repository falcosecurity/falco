if [ $1 = 0 ]; then
	/sbin/service falco stop > /dev/null 2>&1
	/sbin/chkconfig --del falco
fi

mod_version="96bd9bc560f67742738eb7255aeb4d03046b8045"
dkms remove -m falco -v $mod_version --all --rpm_safe_upgrade
