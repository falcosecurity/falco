driver:
    type: "kmod"
    name: "@DRIVER_NAME@"
    repos:
        - "@DRIVERS_REPO@"
    version: "@DRIVER_VERSION@"
    hostroot: "/"
artifact:
  follow:
    every: 6h0m0s
    falcoVersions: http://localhost:8765/versions
    refs:
    - falco-rules:3
indexes:
- name: falcosecurity
  url: https://falcosecurity.github.io/falcoctl/index.yaml
